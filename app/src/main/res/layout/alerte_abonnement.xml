<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgr_newrect"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dismiss"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:elevation="2dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/cancel"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essai gratuit"
                android:textSize="24dp"
                android:padding="5dp"
                android:background="@color/red"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="35dp"
            android:text=" Locabill est gratuite pendant 1 mois seulement.Profitez de toutes les fonctionnalités sans frais pendant cette période. Merci de votre soutien et profitez de l'expérience."
            android:textSize="14dp"
            android:textColor="#BAFFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/monney"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rect"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:fontFamily="@font/gotham_medium"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_marginTop="15dp"
            android:text="Commencer"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="25dp"/>

    </LinearLayout>


</LinearLayout>