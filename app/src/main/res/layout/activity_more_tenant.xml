<!-- activity_details.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:padding="16dp">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/help"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:text="Régenerer les sondes"/>


    <TextView
        android:id="@+id/tv2"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:text="Verser le liquide Storage dans\n les capuchons noirs et laisser\n trembler pendant 4h"/>


    <TextView
        android:id="@+id/tv3"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:text="Plus d'info"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Image d'un sachet dans un\ncapuchon noir"/>


    <TextView
        android:id="@+id/btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Démarrer"
        android:textStyle="bold"
        android:background="@drawable/new_border"
        android:backgroundTint="@color/blue"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_below="@+id/tv4"/>

    <TextView
        android:id="@+id/tv6"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="4 : 00"/>

    <TextView
        android:id="@+id/btn1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Fait"
        android:textStyle="bold"
        android:background="@drawable/border_black"
        android:backgroundTint="@color/blue"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_below="@+id/tv6"/>
</RelativeLayout>
