<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgr_newrect"
        android:backgroundTint="#CE000000"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paiement"
            android:textSize="24dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/retard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14dp"
            android:layout_marginBottom="-10dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/century_gothic"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Le qrcode que vous avez scanner ne provient pas de Ivoire Secours. Veuillez contacter les agents de Ivoire Secours pour vous en procurer un qrcode merci !"
            android:textSize="14dp"
            android:layout_marginBottom="-5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_newrect"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:fontFamily="@font/gotham_medium"
            android:paddingEnd="25dp"
            android:text="TÃ©lecharger votre recu"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="15dp"/>

    </LinearLayout>


</LinearLayout>