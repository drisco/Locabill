<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Bricefile">

    <RelativeLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_black"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="-1dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/locabill"
            app:tint="#3B00BCD4" />
        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Quittance de loyer : "
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/titre"
            android:layout_marginStart="50sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50sp"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_below="@+id/titre"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/ll2"
            android:orientation="vertical">
            <!-- TextViews pour le nom, prénom, numéro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Prénom : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Numéro : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Montant payé : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Type de maison : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mois payé : "
                android:textSize="14sp"
                android:textStyle="bold" />
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avance : "
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold" />-->
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caution : "
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titre"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">
            <!-- TextViews pour l'adresse, le type, la date -->
            <TextView
                android:id="@+id/userNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bamba  "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userPrenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Drissa  "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="+2250504389406  "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/montant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="90000 FCFA  "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Studio "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/debut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=" Moi click ici "
                android:textSize="14sp"
                android:textStyle="bold" />

            <!--<TextView
                android:id="@+id/avance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180000 FCFA "
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold" />-->
            <!--<TextView
                android:id="@+id/caution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180000 FCFA "
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/s_chiffre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:elevation="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:text="Somme en chiffre : "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPaymentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_chiffre"
            android:layout_marginStart="10dp"
            android:elevation="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/date"
            android:text="Fait le :" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_chiffre"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:elevation="1dp"
            android:layout_marginEnd="15dp"
            android:text="25/05/2024"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/qrImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPaymentDate"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:elevation="1dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/iv_open" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/backgr_newrect"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telecharger en pdf"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>