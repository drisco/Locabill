<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_black"
    android:layout_margin="5dp"
    android:padding="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/supp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:elevation="1dp"
            android:src="@drawable/iv_cancel_"/>
        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
    </RelativeLayout>
    
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/netpren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nom et prenom"
            android:textColor="@color/black"
            android:layout_below="@+id/titreTextView"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="numero"
            android:textColor="@color/black"
            android:layout_below="@+id/netpren"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cmmune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:text="commune"
            android:layout_below="@+id/number"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/titreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Titre"
            android:textColor="@color/white"
            android:background="@drawable/backgr_newrect"
            android:textSize="16sp"
            android:backgroundTint="#7ED80D0D"
            android:textStyle="bold" />
        <TextView
            android:layout_below="@+id/cmmune"
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="4dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvoirplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voir plus"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/descriptionTextView"
            android:layout_marginTop="4dp"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>
