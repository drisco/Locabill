<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/white"
    android:padding="16dp">
    <com.example.notificationapp.CustomScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Bouton pour capturer l'image -->
            <Button
                android:id="@+id/captureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capturer l'image"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <!-- ImageView pour afficher le document capturé -->
            <ImageView
                android:id="@+id/documentImageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/captureButton"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray" />

            <!-- TextView pour afficher le texte extrait -->
            <TextView
                android:id="@+id/extractedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/documentImageView"
                android:layout_marginTop="20dp"
                android:text=""
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:padding="10dp"
                android:elevation="2dp" />

            <!-- SignatureView ou Section pour ajouter la signature -->
            <LinearLayout
                android:id="@+id/signatureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extractedTextView"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Signature"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <com.example.notificationapp.SignatureView
                    android:id="@+id/signatureView"
                    android:layout_width="match_parent"
                    android:background="@drawable/backgr_newrect"
                    android:layout_height="200dp"
                    android:elevation="10dp"
                    android:layout_below="@id/captureButton"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/clearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Effacer "
                        android:layout_margin="10dp"
                        android:layout_below="@id/signatureView"/>

                    <Button
                        android:id="@+id/buttonRetrieveSignature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Récupérer "/>
                </LinearLayout>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/signature"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgr_newrect"
                    android:layout_margin="10dp"
                    android:text="Voir le contrat signé"/>

            </LinearLayout>
        </RelativeLayout>
    </com.example.notificationapp.CustomScrollView>
</RelativeLayout>
